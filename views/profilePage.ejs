  <div class="popup-int-form" id="popup-int-form">
    <div class="workup" id="workup">
        <div class="interested-form">
          <form id="interested-form" method="post" action="/interestedToWork" enctype="multipart/form-data">
            <div class="close-button">
              <button id="close-icon"><i class="fa-solid fa-x" style="color: #000;"></i></button></div>
              <label for="category-role">Category:</label>
              <select id="category-role" name="category" required>
                <option value="" disabled selected>Select Category</option>
                <option value="graphic">Graphic Designer</option>
                <option value="architecture">Architecture</option>
                <option value="data-science">Data Science</option>
                <option value="Buisness">Buisness</option>
              </select>

            <label class="interested-label" for="resume">Resume (PDF):</label>
            <input required  type="file" id="resume" name="resume">

            <label class="interested-label" for="description">About:</label>
            <textarea required id="description" name="details"></textarea>


            <button  id="close-icon">Submit</button>


          </form>
        </div>
        
    </div>
